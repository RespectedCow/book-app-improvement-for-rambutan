<% if @organization.errors.any? %>
  <div>
    <ul>
    <% @organization.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
    </ul>
  </div>
<% end  %>

<form method="post" action="create_organization">
    <h1>Create an organization</h1>
    <label for="name" class="sign-up-label">Organization's name</label><br>
    <input type="text" name="name"><br>

    <label for="description" class="sign-up-label">Organization's description</label><br>
    <input type="text" name="description"><br>

    <input type="submit" value="Create Organization">
</form>